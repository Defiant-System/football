<MenuBar>
	<Menu name="Soccer">
		<Menu name="About Soccer" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Soccer" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-content">
		<Menu name="Show&#8230;">
			<Menu name="Manager" click="show-view" arg="manager"/>
			<Menu name="Stadium" click="show-view" arg="stadium"/>
		</Menu>
		<Menu name="Debug Mode">
			<Menu name="0" check-group="debug" click="set-debug-mode" arg="0" is-checked="1"/>
			<Menu name="1" check-group="debug" click="set-debug-mode" arg="1"/>
			<Menu name="2" check-group="debug" click="set-debug-mode" arg="2"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Output Formation" click="output-formation-positions"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>